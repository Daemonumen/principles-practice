//--------------------------------------------//
// C5 - Exercise 2
// fixed
//--------------------------------------------//

#include "std_lib_facilities.h"

const double kelvin = 273.15;

double ctok(double c)
{
	double k = c + kelvin;
	return k;
}

int main()
{
	double c = 0;
	cin >> c;
	double k = ctok(c);
	cout << k << '\n';

	keep_window_open();
	return 0;
}
