// -----------------------------------------------------------------------------

#include "std_lib_facilities.h"

// -----------------------------------------------------------------------------

class Date
{
public:
	Date(int y, int m, int d)
		: y(y), m(m), d(d) {}

	void add_day(int n);

	int month() const { return m; }
	int day() const { return d; }
	int year() const  { return y; }

private:
	int y, m, d;
};

// -----------------------------------------------------------------------------

void Date::add_day(int n)
{
	//increase d by n days
	d += n;
}

// -----------------------------------------------------------------------------

ostream& operator<<(ostream& os, const Date& d)
{
	return os << "(" << d.year()
			  << "," << d.month()
			  << "," << d.day() << ")";
}

// -----------------------------------------------------------------------------

int main()
{
	Date today(1978, 6, 25 );
	Date tomorrow( today );

	tomorrow.add_day(1);

	cout << today << endl;
	cout << tomorrow << endl;

	keep_window_open();
	return 0;
}

