#include "std_lib_facilities.h"

// -----------------------------------------------------------------------------

struct Date
{
	int y;
	int m;
	int d;
};

// -----------------------------------------------------------------------------

void add_day(Date& dd, int n)
{
	//increase dd by n days
	dd.d += n;
}

// -----------------------------------------------------------------------------

ostream& operator<<(ostream& os, const Date& d)
{
	return os << "(" << d.y
			  << "," << d.m
			  << "," << d.d << ")";
}

// -----------------------------------------------------------------------------

int main()
{
	Date today{ 1978, 6, 25 };
	Date tomorrow{ today };

	add_day(tomorrow, 1);

	cout << today << endl;
	cout << tomorrow << endl;

	keep_window_open();
	return 0;
}

