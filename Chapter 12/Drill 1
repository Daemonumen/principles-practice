#include "Simple_window.h"
#include "Graph.h"

// -----------------------------------------------------------------------------

int main()
{
	using namespace Graph_lib;

	Simple_window win{ Point{100,100}, 600, 400, "My Window" };

	win.wait_for_button();
}

