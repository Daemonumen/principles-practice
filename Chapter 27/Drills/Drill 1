//--INCLUDES--//
#include <conio.h>
#include <stdio.h>

// -----------------------------------------------------------------------------

void keepWindowOpen()
{
	printf("\nPress any key to continue...");
	_getch();
}

// -----------------------------------------------------------------------------

int main()
{
    printf("Hello, World! I hate printf with a passion!\n");

	keepWindowOpen();
    return 0;
}

