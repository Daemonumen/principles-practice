/*
	Chapter 25- Exercise 7

	Write out the hexadecimal values from 0 to 400; write out the hexadecimal 
	values from -200 to 200.

*/
// https://github.com/l-paz91/principles-practice/
// -----------------------------------------------------------------------------

//--INCLUDES--//
#include "std_lib_facilities.h"


// -----------------------------------------------------------------------------

int main()
{
	for (int i = 0; i <= 400; ++i)
	{
		cout << dec << i << '\t' << hex << i << '\n';
	}

	cout << "-----------------------------------------------------------------------------\n";

	for (int i = -200; i <= 200; ++i)
	{
		cout << dec << i << '\t' << hex << i << '\n';
	}

	cout << "\n\n";
	pressKeyToContinue();
	_CrtDumpMemoryLeaks();
	return 0;
}

// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
// -----------------------------------------------------------------------------
